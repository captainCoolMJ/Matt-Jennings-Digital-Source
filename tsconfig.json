{
  "compilerOptions": {
    "outDir": "./public/",
    "noImplicitAny": true,
    "target": "es5",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["dom", "es2015"],
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*.ts",
  ]
}
