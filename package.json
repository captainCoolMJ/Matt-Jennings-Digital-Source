{
  "name": "matt-jennings-digital",
  "version": "4.0.0",
  "description": "Matt Jennings' Portfolio Site",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "build": "webpack",
    "clean": "rimraf ./build",
    "start": "node -r dotenv/config build/app.js",
    "start:dev": "nodemon -e tsx,ts,css -w ./source -x npm run kitchensink",
    "kitchensink": "npm run clean && npm run build && npm run start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/captainCoolMJ/Matt-Jennings-Digital-Source.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/captainCoolMJ/Matt-Jennings-Digital-Source/issues"
  },
  "homepage": "https://github.com/captainCoolMJ/Matt-Jennings-Digital-Source#readme",
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.21",
    "@types/react": "^16.8.1",
    "@types/react-dom": "^16.0.11",
    "autoprefixer": "^9.4.7",
    "awesome-typescript-loader": "^5.2.1",
    "css-loader": "^2.1.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.8.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.0.0",
    "mini-css-extract-plugin": "^0.5.0",
    "nodemon": "^1.18.9",
    "postcss-loader": "^3.0.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "typescript": "^3.3.1",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "firebase": "^5.8.3",
    "node-fetch": "^2.3.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/scripts/setup-tests.js"
    ],
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/scripts/styles-mock.js"
    },
    "collectCoverageFrom": [
      "source/**/*.(ts|tsx)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|tsx)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "esModuleInterop": true
        }
      }
    }
  }
}
