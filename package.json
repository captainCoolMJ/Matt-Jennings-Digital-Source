{
  "name": "matt-jennings-digital",
  "author": "Matt Jennings",
  "description": "Matt Jennings' Portfolio Site",
  "version": "3.0.0",
  "main": "index.js",
  "scripts": {
    "lint": "eslint -c .eslintrc.json --fix ./source",
    "build:client": "webpack --env.production=true",
    "build:server": "webpack --config=webpack.server.config.js --env.production=true",
    "build": "npm run build:client && npm run build:server",
    "test": "jest --coverage",
    "serve": "node public/server.js --public ./public --assets ./public/assets",
    "run": "npm run build && npm run serve"
  },
  "devDependencies": {
    "@types/compression": "0.0.36",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/firebase": "^3.2.1",
    "@types/jest": "^24.0.16",
    "@types/jquery": "^3.3.30",
    "@types/minimist": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "autoprefixer": "^9.6.1",
    "awesome-typescript-loader": "^5.2.1",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "css-loader": "^3.1.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import-helpers": "^1.0.2",
    "eslint-plugin-prettier": "^3.1.0",
    "jest": "^24.8.0",
    "jquery": "^1.11.0",
    "jquery.easing": "^1.3.2",
    "mini-css-extract-plugin": "^0.8.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.18.2",
    "terser-webpack-plugin": "^1.3.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "firebase": "^6.3.3",
    "minimist": "^1.2.0"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/scripts/setup-tests.js"
    ],
    "collectCoverageFrom": [
      "source/**/*.ts",
      "!source/**/*.(interface|enum|mock).ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.css$": "<rootDir>/scripts/styles-mock.js"
    },
    "testMatch": [
      "**/*.spec.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "esModuleInterop": true
        }
      }
    }
  }
}
