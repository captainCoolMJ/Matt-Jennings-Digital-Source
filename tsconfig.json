{
    "compilerOptions": {
        "outDir": "./build/",
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "jsx": "react",
        "lib": ["dom", "es2015"],
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "downlevelIteration": true
    },
    "include": [
        "./typings/**/*",
        "./source/**/*.ts",
        "./source/**/*.tsx"
    ]
}