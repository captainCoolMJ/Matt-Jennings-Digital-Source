{
    "compilerOptions": {
        "outDir": "./build/",
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "lib": ["es2015"],
        "noUnusedLocals": true,
        "noUnusedParameters": false
    },
    "include": [
        "./source/**/*.ts"
    ]
}